@using Sitecore.Links;
@using events.tac.local.Business

<header class="header-static">
  <nav class="navbar navbar-default navbar-static" id="mainNavbar">
    <div class="container">
      <!-- [Company Logo] -->
      <div class="navbar-left">
        <a class="navbar-brand" href="index.html">
          <span class="logo">
            <img src="~/Images/Logo_400x60.png" alt="The Adventure Company" width="400" height="60" />
          </span>
        </a>
      </div>
      <!-- [/Company Logo] -->
      <!-- [Main Navigation] -->
      <div class="navbar-left">
        <div class="collapse navbar-collapse" id="siteNavbar">
          @{ var eventTypes = EventsProvider.GetEventTypes(); }
          <ul class="nav navbar-nav">
            <li><a class="text-uppercase" href="~/">Home</a></li>
            <li class="dropdown">
              <a href="~/Events" class="dropdown-toggle text-uppercase" data-toggle="dropdown" role="button" aria-haspopup="true"
                 aria-expanded="false">
                Events<span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                @foreach (var eventItem in eventTypes)
                {
                  <li><a href="@LinkManager.GetItemUrl(eventItem)">@eventItem.Name</a></li>
                }
              </ul>
            </li>
          </ul>
        </div>
      </div>
      <!-- [/Main Navigation] -->
      <!-- [Language Navigation] -->
      <div class="navbar-right">
        <div class="navbar-activity">
          <ul class="nav navbar-nav">
            <li class="dropdown">
              <a href="#" class="btn dropdown-toggle" data-toggle="dropdown">
                <i class="fa fa-globe"></i>
              </a>
              <ul class="dropdown-menu">
                <li class="active"><a href="#">English</a></li>
                <li><a href="#">Deutsch (Deutschland)</a></li>
                <li><a href="#">日本語 (日本)</a></li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
      <!-- [/Language Navigation] -->
    </div>
  </nav>
</header>